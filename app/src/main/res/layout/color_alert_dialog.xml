<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#5B5B5B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поменять цвет"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:paddingBottom="8dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2">

        <View
            android:id="@+id/color_yellow"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/rounded_background_6"
            android:backgroundTint="#FFF599"
            android:layout_margin="4dp" />

        <View
            android:id="@+id/color_purple"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/rounded_background_6"
            android:backgroundTint="#B69CFF"
            android:layout_margin="4dp" />

        <View
            android:id="@+id/color_pink"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/rounded_background_6"
            android:backgroundTint="#FD99FF"
            android:layout_margin="4dp" />

        <View
            android:id="@+id/color_red"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/rounded_background_6"
            android:backgroundTint="#FF9E9E"
            android:layout_margin="4dp" />

        <View
            android:id="@+id/color_green"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/rounded_background_6"
            android:backgroundTint="#91F48F"
            android:layout_margin="4dp" />

        <View
            android:id="@+id/color_blue"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/rounded_background_6"
            android:backgroundTint="#9EFFFF"
            android:layout_margin="4dp" />
    </GridLayout>

</LinearLayout>